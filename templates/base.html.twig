        <!-- Search functionality -->
        <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('navbarSearchInput');
            const searchSuggestions = document.getElementById('searchSuggestions');
            let searchTimeout;

            if (searchInput) {
                // Handle search input
                searchInput.addEventListener('input', function() {
                    const query = this.value.trim();
                    
                    clearTimeout(searchTimeout);
                    
                    if (query.length < 2) {
                        searchSuggestions.style.display = 'none';
                        return;
                    }
                    
                    searchTimeout = setTimeout(() => {
                        fetchSearchSuggestions(query);
                    }, 300);
                });

                // Handle form submission
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        if (this.value.trim()) {
                            window.location.href = '{{ path('app_search') }}?q=' + encodeURIComponent(this.value.trim());
                        }
                    }
                });

                // Hide suggestions when clicking outside
                document.addEventListener('click', function(e) {
                    if (!searchInput.contains(e.target) && !searchSuggestions.contains(e.target)) {
                        searchSuggestions.style.display = 'none';
                    }
                });

                // Show suggestions when input is focused and has content
                searchInput.addEventListener('focus', function() {
                    if (this.value.trim().length >= 2) {
                        searchSuggestions.style.display = 'block';
                    }
                });
            }

            function fetchSearchSuggestions(query) {
                fetch('{{ path('app_search_ajax') }}?q=' + encodeURIComponent(query))
                    .then(response => response.json())
                    .then(data => {
                        displaySearchSuggestions(data.results);
                    })
                    .catch(error => {
                        console.error('Error fetching search suggestions:', error);
                    });
            }

            function displaySearchSuggestions(results) {
                const suggestions = document.getElementById('searchSuggestions');
                suggestions.innerHTML = '';

                let hasResults = false;

                // Add tracks
                if (results.tracks && results.tracks.length > 0) {
                    hasResults = true;
                    suggestions.innerHTML += '<h6 class="dropdown-header"><i class="fas fa-music me-2"></i>Tracks</h6>';
                    
                    results.tracks.slice(0, 3).forEach(track => {
                        suggestions.innerHTML += `
                            <a class="dropdown-item d-flex align-items-center" href="#" onclick="playTrackFromSearch('${track.audioFile}', '${track.title.replace(/'/g, '\\'')}', '${track.artist.replace(/'/g, '\\'')}', '${track.coverImage || ''}')">
                                <div class="me-3">
                                    ${track.coverImage ? 
                                        `<img src="{{ asset('uploads/covers/') }}${track.coverImage}" class="rounded" style="width: 30px; height: 30px; object-fit: cover;">` :
                                        `<div class="bg-primary rounded d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;"><i class="fas fa-music text-white" style="font-size: 10px;"></i></div>`
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold">${track.title}</div>
                                    <small class="text-muted">${track.artist}</small>
                                </div>
                            </a>
                        `;
                    });
                }

                // Add playlists
                if (results.playlists && results.playlists.length > 0) {
                    hasResults = true;
                    if (results.tracks && results.tracks.length > 0) {
                        suggestions.innerHTML += '<div class="dropdown-divider"></div>';
                    }
                    suggestions.innerHTML += '<h6 class="dropdown-header"><i class="fas fa-list me-2"></i>Playlists</h6>';
                    
                    results.playlists.slice(0, 2).forEach(playlist => {
                        suggestions.innerHTML += `
                            <a class="dropdown-item d-flex align-items-center" href="/?playlist=${playlist.id}">
                                <div class="me-3">
                                    ${playlist.coverImage ? 
                                        `<img src="{{ asset('uploads/covers/') }}${playlist.coverImage}" class="rounded" style="width: 30px; height: 30px; object-fit: cover;">` :
                                        `<div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;"><i class="fas fa-list text-white" style="font-size: 10px;"></i></div>`
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold">${playlist.name}</div>
                                    <small class="text-muted">${playlist.tracksCount} tracks</small>
                                </div>
                            </a>
                        `;
                    });
                }

                // Add "View all results" link
                if (hasResults) {
                    suggestions.innerHTML += '<div class="dropdown-divider"></div>';
                    suggestions.innerHTML += `
                        <a class="dropdown-item text-center fw-bold" href="{{ path('app_search') }}?q=${encodeURIComponent(searchInput.value)}">
                            <i class="fas fa-search me-2"></i>View all results
                        </a>
                    `;
                }

                if (!hasResults) {
                    suggestions.innerHTML = '<div class="dropdown-item text-muted">No results found</div>';
                }

                suggestions.style.display = 'block';
            }

            // Global function to play track from search
            window.playTrackFromSearch = function(audioFile, title, artist, coverImage) {
                if (window.safePlayTrack) {
                    window.safePlayTrack(audioFile, title, artist, coverImage);
                }
                searchSuggestions.style.display = 'none';
                searchInput.value = '';
            };
        });
        </script>
        
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
